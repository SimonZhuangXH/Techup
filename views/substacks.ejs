<script>
  // active click change color to blue
  const listSubstacks = document.querySelectorAll(".list_substacks")
  listSubstacks.forEach(sub => {
  sub.addEventListener('click', () => {
      document.querySelector('.active')?.classList.remove('active')
      sub.classList.add('active')
  })
  })
</script>
