<script>
  function showContent(ev,title, author, date, summary, raw) {
    (ev||event).preventDefault();
    document.querySelector(".SubstackTitle").innerHTML = title
    document.querySelector(".SubstackAuthor").innerHTML = author
    document.querySelector(".SubstackDate").innerHTML = date
    document.querySelector(".SubstackSummaryHeader").innerHTML = "Summary"
    document.querySelector(".SubstackSummary").innerHTML = summary
    document.querySelector(".SubstackRawHeader").innerHTML = "Raw Newsletter"
    document.querySelector(".SubstackRaw").innerHTML = raw
  }

</script>
<% function dateConvert(date_obj) { %>
<%  return date_obj.getDate() + " " + date_obj.toLocaleString('en-US', {month: 'short'}) %>
<% } %>


<body cz-shortcut-listen="true">

<main class="d-flex flex-nowrap maincontainer">

  <br>
<div class="b-example-divider b-example-vr contentboxheight column_container"></div>

<div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-body-tertiary contentboxheight" style="width: 380px;">
  <a class="d-flex align-items-center flex-shrink-0 p-3 link-body-emphasis text-decoration-none border-bottom" >
    <svg class="bi pe-none me-2" width="30" height="24"></svg>
    <span class="fs-5 fw-semibold">Substack Newsletters</span>
  </a>
  <div class="list-group list-group-flush border-bottom scrollarea logsContainer">
    <% locals.data.forEach((substack)=> { %> 
      <a href="#" class="list-group-item list-group-item-action py-4 lh-sm list_substacks" 
      onclick='showContent(event,
      "<%= substack.Title %>", 
      "<%= substack.Author %>",
      "<%= substack.Datetime %>",
      "<%= substack.Summary %>", 
      "<%= substack.Raw %>")'>
      <div class="d-flex w-100 align-items-center justify-content-between">
        <strong class="mb-1"><%= substack.Author %></strong>
        <small style="font-size: small"><%= dateConvert(substack.Datetime) %></small>
      </div>
      <div class="col-10 mb-1 small"><%= substack.Title %></div>
    </a>
    <% }) %>  
  </div>
</div>

<div class="b-example-divider b-example-vr contentboxheight"></div>

<div class="d-flex flex-column align-items-stretch bg-body-tertiary textboxdim" style="background-color: white;">
  
  <div class="list-group list-group-flush border-bottom scrollarea logsContainer">
    <div class="list-group-item list-group-item py-3 lh-sm mt-1">
      <div class="d-flex w-100 align-items-center justify-content-between">
        <strong style="font-weight: bolder;font-size: x-large;"class="mb-1 SubstackTitle"></strong>
      </div>
      <span style="font-size: large" class="SubstackAuthor"></span><br>
      <span class="small SubstackDate"></span>
      <br>
      <div style="font-weight: bolder;font-size: larger;"class="col-12 mb-1 small SubstackSummaryHeader mt-2"></div>
      <div class="justify-content-between col-13 mb-1 SubstackSummary"></div>
      <br>
      <div style="font-weight: bolder;font-size: larger;"class="col-12 mb-1 small SubstackRawHeader">Select an item to read!</div>
      <div class="col-12 mb-5 pb-4 SubstackRaw justify-content-between"></div>
    </div>
  </div>
</div>

